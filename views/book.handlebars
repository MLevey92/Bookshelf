{{! similar to book-details file, but more general info }}
<!-- If the user is logged in, render the book content -->

<div class="book-card">
    <img src="https://covers.openlibrary.org/b/olid/{{Book.cover_edition_key}}-M.jpg"
        alt="Book Cover for {{Book.title}}" class="book-cover">
    <div class="book-info">
        <h2>{{Book.title}}</h2>
        <p>Readers Rated this book: {{Book.ratings_average}} out of 5 </p>
        <p>Author: {{Book.author_name}}</p>
        <p>First Published Year: {{Book.first_publish_year}}</p>
        <p>Book Intro: {{Book.first_sentence}}</p>
    </div>

    {{#if logged_in}}
    <div>
        <button
            class="add-book-btn relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-red-200 via-red-300 to-yellow-200 group-hover:from-red-200 group-hover:via-red-300 group-hover:to-yellow-200 dark:text-white dark:hover:text-gray-900 focus:ring-4 focus:outline-none focus:ring-red-100 dark:focus:ring-red-400"
            onclick="addToBookshelf('{{Book.title}}', '{{Book.author_name}}', '{{Book.cover_edition_key}}')">
            <span
                class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                Add to Bookshelf</span>
        </button>
    </div>
    {{/if}}
</div>

<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/">You must log in to build your bookshelf</a>
{{/if}}
